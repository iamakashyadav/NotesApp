<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="css/notes.css">
    <title>Notes</title>
</head>

<body>
    <div class="take-note">
        <div class="user">
            <p>Hello, <span><%=user.name%></span></p>
            <a href="/logout">Logout</a>
        </div>
        <form action="/insert" method="POST">
            <input type="text" name="title" placeholder="Title">
            <textarea name="note" rows="5" placeholder="Take a note..."></textarea>
            <button type="submit">Add</button>
        </form>
    </div>
    <hr><br>
    <div class="notes">
        <%user.notes.forEach(note=>{%>
        <div class="note" data-aos="fade-up">
            <h2><%=note.title%></h2>
            <hr>
            <p><%=note.note%></p>
            <input type="hidden" name="id" value=<%=note._id%>>
            <div class="note-edit">
                <button onclick="buttonShowModal(this)">Show</button>
                <button onclick="buttonEditModal(this)" class="edit-button"><img src="img/edit.png" alt="edit"></button>
                <form action="/delete" method="post"><input type="hidden" name="id" value=<%=note._id%>><button><img
                            src="img/delete.png" alt="delete"></button></form>
            </div>
        </div>
        <%});%>
    </div>
    <div class="edit-modal" id="editModal">
    </div>
    <div class="show-modal" id="showModal">
    </div>
    <script src="js/notes.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            offset: 120,
            duration: 900
        });
    </script>
</body>

</html>